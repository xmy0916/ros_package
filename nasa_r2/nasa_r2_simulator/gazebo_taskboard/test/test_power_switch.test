<launch>

  <!-- load world -->
  <param name="/use_sim_time" value="true"/>
  <node name="gazebo" pkg="gazebo" type="gazebo" args="$(find r2_gazebo)/gazebo/r2_empty.world" output="screen" respawn="false" />

  <!-- load taskboard -->
  <param name="taskboard_description" command="$(find xacro)/xacro.py '$(find r2_gazebo)/urdf/taskboard.urdf.xacro'" />  
  <node name="spawn_taskboard" pkg="gazebo" type="spawn_model" args="-urdf -param taskboard_description -model taskboard -R 0.2 -P 0.01 -Y 1.40 -x -5.53 -y -0.15 -z -0.29" respawn="false" output="screen" /> 

  <!-- start gui -->
  <node name="gazebo_gui" pkg="gazebo" type="gui" respawn="false" output="screen" />

   <!-- start test -->
  <test test-name="test_power_switch" pkg="gazebo_taskboard" type="test_power_switch.py" time-limit="300.0"/>

</launch>
